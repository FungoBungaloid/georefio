{
  "performance": {
    "use_gpu": true,
    "cpu_threads": 4
  },
  "matching": {
    "default_quality_preset": "balanced",
    "enable_progressive_refinement": true,
    "progressive_scales": [512, 768, 1024],
    "confidence_thresholds": {
      "strict": 0.85,
      "balanced": 0.70,
      "permissive": 0.55,
      "very_permissive": 0.20
    },
    "min_gcps": 6,
    "geometric_threshold": 0.8
  },
  "tile_fetching": {
    "default_basemap_source": "osm_standard",
    "tile_cache_size_mb": 500,
    "tile_cache_expiry_days": 30,
    "default_zoom_level": 17
  },
  "georeferencing": {
    "default_transform_type": "auto",
    "default_resampling": "cubic",
    "default_compression": "LZW",
    "auto_load_result": true
  },
  "output": {
    "default_output_directory": "~/georeferenced_outputs",
    "output_naming_scheme": "{source_name}_georef.tif"
  },
  "ui": {
    "show_overlay_preview": true,
    "show_confidence_viewer": true
  },
  "model": {
    "huggingface_repo": "zju-community/matchanything_eloftr",
    "estimated_size_mb": 400,
    "license": "Apache 2.0"
  },
  "batch": {
    "default_api_provider": "openai",
    "default_model": "gpt-4o-mini",
    "default_output_suffix": "_georef",
    "max_image_dimension": 4096,
    "zoom_range": 2,
    "vision_api_models": {
      "gpt-4o": {
        "provider": "openai",
        "cost_per_image_low": 0.01,
        "cost_per_image_high": 0.03
      },
      "gpt-4o-mini": {
        "provider": "openai",
        "cost_per_image_low": 0.001,
        "cost_per_image_high": 0.005
      },
      "claude-sonnet-4-20250514": {
        "provider": "anthropic",
        "cost_per_image_low": 0.01,
        "cost_per_image_high": 0.03
      },
      "claude-haiku-3-5-20241022": {
        "provider": "anthropic",
        "cost_per_image_low": 0.002,
        "cost_per_image_high": 0.008
      }
    }
  }
}
